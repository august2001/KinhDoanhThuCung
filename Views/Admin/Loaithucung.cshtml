@using KinhDoanhThuCung.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<KinhDoanhThuCung.Models.LOAI>


@{
    ViewBag.Title = "Loaithucung";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top:40px;color:red; text-align: center" ">QUẢN LÝ LOẠI THÚ CƯNG</h2>

<p>
    @Html.ActionLink("Thêm mới", "Themmoiloai")
</p>
<table class="table" border="1">
    <tr>
        <th style="width:200px">Mã loại</th>
        <th style="width:200px">Tên loại</th>
        <th style="width:200px"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MALOAI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENLOAI)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Sualoai", new { id = item.MALOAI }) |
                @*@Html.ActionLink("Chi tiết", "Chitietsach", new { id = item.MALOAI }) |*@
                @Html.ActionLink("Xóa", "Xoaloai", new { id = item.MALOAI })
            </td>
        </tr>
    }

</table>
<p style="text-align:center">Trang @(Model.PageCount<Model.PageNumber? 0:Model.PageNumber)/@Model.PageCount</p>
<div class="MenuTrang" style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("Loaithucung", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 8px;
        line-height: 1.42857143;
        vertical-align: top;
        border-top: 1px solid #333;
    }
</style>