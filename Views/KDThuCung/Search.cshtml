@using KinhDoanhThuCung.Models
@using PagedList.Mvc;
@model PagedList.PagedList<THUCUNG>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<center><h6>THÚ CƯNG CAN TIM</h6></center>
<div class="row">
    @foreach (var tc in Model)
    {
        <div class="toppet">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "KDThuCung", new { id = tc.MATC })">
                    <img alt="@tc.GIONG.TENGIONG" src="~/HinhThuCung/@tc.ANH" @*height="100px"*@ style="height:200px" />
                    <div>
                        <h5 style="text-align:center">
                            @tc.GIONG.TENGIONG
                        </h5>
                        <p></p>
                    </div>
                    <div class="rating">
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                        @*<center><p class="pull-right">15 reviews</p></center>*@
                    </div>
                </a>
            </div>
        </div>
    }
</div>
<center>
    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    <div class="Menu">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</center>

<style>
    h6 {
        text-align: center;
        margin: 10px 0;
        position: relative;
        line-height: 60px;
        color: #555;
        color: darkblue;
        font-size: 35px;
        padding-top: 50px;
    }

        h6::after {
            content: "";
            background: blue;
            width: 80px;
            height: 5px;
            border-radius: 5px;
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
        }

    .thumbnail {
        flex-basis: 25%;
        padding: 10px;
        min-width: 200px;
        margin-top: 20px;
        transition: 0.6s;
        float: left;
        width: 268px;
        height: 300px;
        border: 0px;
    }



        .thumbnail:hover {
            transform: translateY(-5px);
        }

    .rating {
        color: #b81a1a;
        text-align: center;
    }

    .index {
        max-width: 1100px;
        /*Sửa 10 lên 300*/
        padding-left: 300px;
        padding-right: 10px;
        padding-top: 100px;
    }
</style>
