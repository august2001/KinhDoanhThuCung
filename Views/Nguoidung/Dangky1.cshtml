
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dangky1</title>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Login Form Template</title>

    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link href="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/assets/css/form-elements.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
</head>
<body>
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h4 style="color:antiquewhite">ĐĂNG KÝ</h4>
                                @ViewData["Loi9"]
                                <p style="color:antiquewhite">Vui lòng điền thông tin dưới đây:</p>

                                <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-key"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                            <tr style="height:40px">
                                <td>Họ tên khách hàng:</td>
                                <div>
                                <td>
                                    @Html.TextBox("HotenKH")
                                    @ViewData["Loi1"]
                                </td>
                                </div>
                                    
                                </tr>
                           <tr style="height:40px">
                            <td>Tên đăng nhập:</td>
                            <div>
                            <td>
                                @Html.TextBox("TenDN")
                                @ViewData["Loi2"]

                            </td>
                            </div>
                                   
                                </tr>
                          <tr style="height:40px">
                            <td>Mật khẩu:</td>
                            <div>
                            <td>
                                @Html.Password("Matkhau")
                                @ViewData["Loi3"]
                            </td>
                            </div>
                                  
                                            </tr>
                         <tr style="height:40px">
                            <td>Mật khẩu nhập lại:</td>
                            <div>
                            <td>
                                @Html.Password("Matkhaunhaplai")
                                @ViewData["Loi4"]
                                @ViewData["Loi7"]
                            </td>
                            </div>
                                 
                                </tr>
                        <tr style="height:40px">
                            <td>Giới tính:</td>
                            
                            <td>
                                <label>
                                    @Html.RadioButton("Gioitinh", "Nam")Nam
                                </label>
                                <label>
                                    @Html.RadioButton("Gioitinh", "Nữ")Nữ
                                </label>
                            </td>
                            
                            
                                </tr>

                        <tr style="height:40px">
                            <div>
                                <td>Ngày sinh:</td>
                            </div>
                   
                            <div>
                            <td>
                                <input type="date" name="Ngaysinh" />
                            </td>
                            </div>
                                 
                                </tr>
                            <tr style="height:40px">
                                <td>Đia chỉ:</td>
                                <div>
                                    <td>
                                        @Html.TextBox("DiaChi")
                                    </td>
                                </div>

                            </tr>
                            <tr style="height:40px">
                                <td>Điện thoại:</td>
                                <div>
                                <td>
                                    @Html.TextBox("Dienthoai")
                                    @ViewData["Loi5"]
                                    @ViewData["Loi8"]

                                </td>
                                </div>


                            </tr>
                            <tr style="height:40px">
                                <td>CMND:</td>
                                <div>
                                <td>
                                    @Html.TextBox("ChungMinh")
                                    @ViewData["Loi6"]
                                    @ViewData["Loi10"]
                                </td>
                                </div>


                            </tr>
                            <tr style="height:40px">
                                <td></td>
                                <div>
                                <td>

                                    <input style="color:black;height:30px;font-weight:bold;background-color:#ffffff" type="submit" value="Đăng ký" />
                                    <a href="@Url.Action("Index","KDThuCung")"><input style="color: black; height: 30px; font-weight: bold; background-color: #ffffff" value="<< Trờ về trang chủ" type="button" /></a>
                                </td>
                                </div>

                            </tr>
                            }
                        </div>
                    </div>
                </div>

            </div>
            </div>

            </div>


            <!-- Javascript -->
            <script src="~/Content/assets/js/jquery-1.11.1.min.js"></script>
            <link href="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
            <script src="~/Content/assets/js/jquery.backstretch.min.js"></script>
            <script src="~/Content/assets/js/scripts.js"></script>


            <!--[if lt IE 10]>
                <script src="assets/js/placeholder.js"></script>
            <![endif]-->
        </body>
</html>
<style>
    body {
        background: url('/HinhThuCung/anh-thu-cung-cute-de-thuong_014113010.jpg');
    }
    .form-top {
        overflow: hidden;
        padding: 0px 2px 1px 5px;
        background: rgb(0 0 0 / 38%);
        -moz-border-radius: 4px 4px 0 0;
        -webkit-border-radius: 4px 4px 0 0;
        border-radius: 4px 4px 0 0;
        text-align: left;
    }

    .form-bottom {
        padding: 5px 1px 10px 5px;
        background: rgb(0 0 0 / 38%);
        -moz-border-radius: 0 0 4px 4px;
        -webkit-border-radius: 0 0 4px 4px;
        border-radius: 0 0 4px 4px;
        text-align: left;
    }

    * {
        COLOR: #f5de03;
    }
    input[type="text"], input[type="password"], textarea, textarea.form-control {
        height: 25px;
        margin: 0;
        padding: 0 20px;
        vertical-align: middle;
        background: rgb(255 255 255 / 10%);
        border: 3px solid #3330;
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        font-weight: 300;
        line-height: 50px;
        color: #00ff04;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        -moz-box-shadow: none;
        -webkit-box-shadow: none;
        box-shadow: none;
        -o-transition: all .3s;
        -moz-transition: all .3s;
        -webkit-transition: all .3s;
        -ms-transition: all .3s;
        transition: all .3s;
    }
    button, input, optgroup, select, textarea {
        margin: 0;
        font: inherit;
        color: inherit;
        background: rgb(255 255 255 / 10%);
    }

</style>