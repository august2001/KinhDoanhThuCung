
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<h2>THÔNG TIN THÚ CƯNG</h2>
<div>
    <div style="width:40%; float:left; border-left:dotted 1px;border-color:azure">
        <img src="~/HinhThuCung/@Model.ANH" width="100%" />
    </div>
    <div style="width:60%; float:left;padding:10px">
        <h4 style="font-weight:bold;color:red">Tên thú cưng: @Model.GIONG.TENGIONG</h4>
      <p  style="text-align:justify;font-size:20px"><span style="font-weight:bold">Mô tả: </span>@Model.GIONG.MOTAG</p>
        <p style="font-weight:bold;font-size:20px">Giá bán: <span style="color:red; font-size:16pt">@Model.DONGIA VNĐ</span></p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("ThemGioHang","GioHang", new {  @sMATC=@Model.MATC,@strURL=Request.Url.ToString()})" class="list-group-item">
                ĐẶT MUA
            </a>
        </div>
    </div>
</div>
<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
       /* padding-bottom:20px;*/
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }

    h2, .h2 {
        font-size: 30px;
        text-align: center;
        color:red;
    }
    
</style>
